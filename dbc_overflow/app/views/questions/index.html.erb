<h1>Stack Overflow</h1>

<%= link_to 'New question', new_question_path %>
<br>
<br>
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th>Points</th>
    <th colspan="2"></th>
  </tr>

<% @questions.each do |q| %>
<td><%= q.title%></td>
<td><%= q.content%></td>
<td><%= q.points%></td>
<td><%= link_to 'Show', question_path(q) %></td>
<td><% if current_user == q.user%><%= link_to 'Edit', edit_question_path(q)%></td>
<td><%= link_to 'Destroy', q, method: :delete,
data: {confirm: 'Are you sure?'} %>
<%end%>
</td>
    </tr>
  <%end%>
</table>
