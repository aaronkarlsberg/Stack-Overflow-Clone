<tr class="question_row">
<td><%= markdown(@question.title)%></td>
<td><%= markdown(@question.content)%></td>
<td><%= @question.points%></td>
<td><%= link_to 'Show', question_path(@question) %></td>
<td><% if current_user == @question.user%><%= link_to 'Edit', edit_question_path(@question)%></td>
<td><%= link_to 'Destroy', @question, method: :delete,
data: {confirm: 'Are you sure?'} %>
  <%end%>
</td>
  </tr>
