<div class="voter">
  <p>
  <strong>Points:</strong>
  <div class="points" ><%= @question.points %> </div>
</p>
<div class="up">
<%= button_to 'UpVote', upvote_question_path(@question), :class => 'upvote', :method => 'post'%>
</div>

<div class="down" >
<%= button_to 'DownVote', downvote_question_path(@question), :class => 'downvote', :method => 'post' %>
</div>
</div>
<p>
  <strong>Title:</strong>
  <%= @question.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @question.content %>
</p>

<%= link_to 'Back', questions_path %> |
<% if current_user == @question.user%> <%=link_to 'Edit', edit_question_path(@question) %><%end%>


<h2>Answers</h2>
<div id="answers">
<%@answers = @question.answers%>
<%= render @answers %>
</div>

<h2>Answer this question:</h2>
<%= render 'answers/form' %>

